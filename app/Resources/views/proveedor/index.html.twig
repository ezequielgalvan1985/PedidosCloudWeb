{% extends 'base.html.twig' %}

{% block body %}
    <h1>Proveedors list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Razonsocial</th>
                <th>Domicilio</th>
                <th>Email</th>
                <th>Percepcion</th>
                <th>Condicioniva</th>
                <th>Cuit</th>
                <th>Ingbrutos</th>
                <th>Codpostal</th>
                <th>Cbu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proveedor in proveedors %}
            <tr>
                <td><a href="{{ path('proveedor_show', { 'id': proveedor.id }) }}">{{ proveedor.id }}</a></td>
                <td>{{ proveedor.razonsocial }}</td>
                <td>{{ proveedor.domicilio }}</td>
                <td>{{ proveedor.email }}</td>
                <td>{% if proveedor.percepcion %}Yes{% else %}No{% endif %}</td>
                <td>{{ proveedor.condicioniva }}</td>
                <td>{{ proveedor.cuit }}</td>
                <td>{{ proveedor.ingbrutos }}</td>
                <td>{{ proveedor.codpostal }}</td>
                <td>{{ proveedor.cbu }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('proveedor_show', { 'id': proveedor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('proveedor_edit', { 'id': proveedor.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('proveedor_new') }}">Create a new proveedor</a>
        </li>
    </ul>
{% endblock %}
