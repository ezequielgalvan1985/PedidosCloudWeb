{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorias list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': categorium.id }) }}">{{ categorium.id }}</a></td>
                <td>{{ categorium.nombre }}</td>
                <td>{{ categorium.descripcion }}</td>
                <td>{{ categorium.imagen }}</td>
                <td>
                   
                    <a href="{{ path('categoria_show', { 'id': categorium.id }) }}" class="btn btn-default">show</a>
                       
                    <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="btn btn-primary">edit</a>
                       
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categoria_new') }}">Create a new categorium</a>
        </li>
    </ul>
{% endblock %}
