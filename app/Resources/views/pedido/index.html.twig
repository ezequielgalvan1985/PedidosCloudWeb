{% extends 'base.html.twig' %}

{% block body %}
   
<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li class="active"><a href="{{path('pedido_index')}}">Pedidos</a></li>
</ol>

<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Listado de Pedidos</div>
        <div class="panel-body">
            <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Subtotal</th>
                <th>Monto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pagination %}
            <tr>
                <td><a href="{{ path('pedido_show', { 'id': pedido.id }) }}">{{ pedido.id }}</a></td>
                <td>{% if pedido.fecha %}{{ pedido.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ pedido.estadoId }}</td>
                
                <td>{{ pedido.subtotal }}</td>
                
                <td>{{ pedido.monto }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('pedidodetalle_new', { 'pedido_id': pedido.id }) }}">show</a>
                    <a class="btn btn-default" href="{{ path('pedido_edit', { 'id': pedido.id }) }}">edit</a>
                </td>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
   
    <a href="{{ path('pedido_new') }}" class="btn btn-primary">Nuevo</a>
     </div>
    </div>
    </div>  
        
        
     
     
     
          
    </div>
{% endblock %}
